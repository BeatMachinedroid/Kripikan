<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kripikan.CartActivity2">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/back" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="95dp"
        android:text="My Cart"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="360dp"
        android:layout_height="170dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="170dp"
        android:alpha="0.9"
        android:background="@drawable/background_btn2"
        android:backgroundTintMode="src_over" />

    <ImageView
        android:id="@+id/gambarcart"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="165dp"
        android:background="@drawable/ori" />

    <TextView
        android:id="@+id/textcart2"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="180dp"
        android:text="Original"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/jumlah2"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="215dp"
        android:text="01"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Rp. 15.000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="200dp"
        android:textColor="@color/white"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/trash"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="330dp"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="350dp"
        android:text="*Notes : Tambahan Ongkir Rp.15.000"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/alamat"
        android:layout_width="360dp"
        android:layout_height="120dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="390dp"
        android:background="@drawable/textareabackgroud"
        android:gravity="top|fill"
        android:hint="   Isi Alamat Anda"
        android:inputType="textMultiLine"
        android:textSize="20dp" />


    <ImageButton
        android:onClick="Cart2"
        android:id="@+id/cart"
        android:layout_width="310dp"
        android:layout_height="80dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="530dp"
        android:background="@drawable/background_btn4" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="545dp"
        android:text="Add to cart"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

</RelativeLayout>